<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="465.0" prefWidth="409.0" spacing="20.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.debi.socialmediaapp.controllers.ProfileController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Profile Picture -->
    <ImageView fx:id="profilePicture" fitHeight="150.0" fitWidth="150.0" preserveRatio="true" style="-fx-effect: dropshadow(gaussian, gray, 10, 0.5, 0, 0);" />

    <!-- User Info Section -->
    <VBox spacing="10.0" alignment="CENTER">
        <Label fx:id="firstNameLabel" style="-fx-font-size: 14px;" />
        <Label fx:id="lastNameLabel" style="-fx-font-size: 14px;" />
        <Label fx:id="emailLabel" style="-fx-font-size: 14px;" />
    </VBox>

    <!-- Bio Section -->
    <Label text="Bio:" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    <Label fx:id="bioText" wrapText="true" style="-fx-font-size: 14px;" maxWidth="300.0" />

    <!-- Buttons Section -->
    <HBox alignment="CENTER" spacing="20.0">
        <Button text="Edit Profile" fx:id="editProfileButton" onAction="#onEditProfileButtonClick" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 10;" />
        <Button text="Posts" fx:id="postsButton" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 10;" />
    </HBox>
</VBox>
